{
  "compilerOptions": {
    "target": "ESNext",
    "noEmitOnError": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["jest", "cypress"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "*.cy.js",
    "jest.config.js",
    "nextDocs/**.ts",
    "nextDocs/**.tsx"
, "nextDocs/index.jsx", "nextDocs/core/readDir.js", "nextDocs/core/index.js"  ],
  "exclude": ["node_modules", "cypress", "*.test.ts", "*.test.tsx"]
}
