{
  "compilerOptions": {
    "target": "ESNext",
    "noEmitOnError": true,
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "isolatedModules": true, 
    "jsx": "preserve",
    "types": ["jest", "cypress"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "*.cy.js",
    "jest.config.js"
  ],
  "exclude": ["node_modules", "cypress", "*.test.ts", "*.test.tsx"]
}
